<div class="content-center">
	<form class="form-login" accept-charset="UTF-8" action="register" method="post" >
		<div class="form-group">
			<label>Email</label>
			<input type="email" name="email" value="<%= params[:email] %>" class="form-control" placeholder="Email">
		</div>
		<% if @error != nil && @error[:email][0] != nil %>
			<div id="login-error" class="form-group login-error">
				<%= @error[:email][0] %>
			</div>
		<% end %>
		<div class="form-group">
			<label>Pseudo</label>
			<input type="text" name="pseudo" value="<%= params[:pseudo] %>" class="form-control" placeholder="Pseudo">
		</div>
		<% if @error != nil && @error[:pseudo][0] != nil %>
			<div id="login-error" class="form-group login-error">
				<%= @error[:pseudo][0] %>
			</div>
		<% end %>
		<div class="form-group">
			<label>Password</label>
			<input type="password" name="password" class="form-control" placeholder="Password">
		</div>
		<% if @error != nil && @error[:password][0] != nil %>
			<div id="login-error" class="form-group login-error">
				<%= @error[:password][0] %>
			</div>
		<% end %>
		<div class="form-group">
			<label>Password confirmation</label>
			<input type="password" name="password_confirmation" class="form-control" placeholder="Password confirmation">
		</div>
		<% if @error != nil && @error[:password_confirmation][0] != nil %>
			<div id="login-error" class="form-group login-error">
				<%= @error[:password_confirmation][0] %>
			</div>
		<% end %>
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<button type="submit" class="btn btn-primary">Register</button>
	</form>
</div>
